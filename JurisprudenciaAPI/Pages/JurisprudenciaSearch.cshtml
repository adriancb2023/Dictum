        </div>
        <label asp-for="Input.NumeroRecurso" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="Input.NumeroRecurso" class="form-control" />
            <span asp-validation-for="Input.NumeroRecurso" class="text-danger"></span>
        </div>
    </div>

     <hr />

     <div class="form-group row mb-2">
        <label asp-for="Input.Ponente" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Input.Ponente" class="form-control" />
            <span asp-validation-for="Input.Ponente" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-2">
        <label asp-for="Input.Idioma" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
             <select asp-for="Input.Idioma" class="form-select">
                <option value="">Todos</option>
                <option value="1">Español</option>
                <option value="2">Català</option>
                <option value="3">Galego</option>
                <option value="4">Euskera</option>
            </select>
            <span asp-validation-for="Input.Idioma" class="text-danger"></span>
        </div>
    </div>

    <!-- Add other form fields here based on SearchInputModel -->

    <hr />

    <div class="form-group row mt-3">
        <div class="col-sm-10 offset-sm-2">
             <button type="submit" class="btn btn-primary">Buscar</button>
             <!-- Add Limpiar button if needed -->
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Actualizar el texto del botón cuando se seleccionan comunidades
            $('.comunidad-checkbox').change(function() {
                var selectedText = [];
                $('.comunidad-checkbox:checked').each(function() {
                    selectedText.push($(this).next('label').text());
                });
                
                if (selectedText.length === 0) {
                    $('.selected-text').text('Todas');
                } else {
                    $('.selected-text').text(selectedText.join(', '));
                }

                // Actualizar el campo oculto con los valores seleccionados
                var selectedValues = [];
                $('.comunidad-checkbox:checked').each(function() {
                    selectedValues.push($(this).val());
                });
                $('#localizacionHidden').val(selectedValues.join(','));
            });
        });
    </script>
} 