    <div class="form-group row mb-2">
        <label asp-for="Input.FechaResolucionDesde" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="Input.FechaResolucionDesde" class="form-control" />
            <span asp-validation-for="Input.FechaResolucionDesde" class="text-danger"></span>
        </div>
