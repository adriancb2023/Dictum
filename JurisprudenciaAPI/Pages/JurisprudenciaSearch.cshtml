@page "/BusquedaJusrisprudencia"
@model JurisprudenciaApi.Pages.JurisprudenciaSearchModel
@{ // This sets the title shown in the browser tab
    ViewData["Title"] = "Búsqueda de Jurisprudencia";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row mb-2">
        <label asp-for="Input.TextoLibre" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Input.TextoLibre" class="form-control" placeholder="Búsqueda por texto libre" />
