            </select>
            <span asp-validation-for="Input.Jurisdiccion" class="text-danger"></span>
        </div>
        <label asp-for="Input.TipoResolucion" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
             <!-- Placeholder for Tipo Resolución - Complex control needs more work -->
            <input asp-for="Input.TipoResolucion" class="form-control" placeholder="Tipo Resolución (simplificado)" />
            <span asp-validation-for="Input.TipoResolucion" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-2">
        <label asp-for="Input.TipoOrgano" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <!-- Placeholder for Tipo Organo - Complex control needs more work -->
            <input asp-for="Input.TipoOrgano" class="form-control" placeholder="Tipo Órgano (simplificado)" />
            <span asp-validation-for="Input.TipoOrgano" class="text-danger"></span>
        </div>
    </div>

