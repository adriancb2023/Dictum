<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="TFG_V0._01.Styles.WindowStyles">
    
    <!-- Estilo base para botones de la barra de título -->
    <Style x:Key="WindowButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#50FFFFFF"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#80FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Estilo para el botón de cerrar -->
    <Style x:Key="WindowCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
        <Setter Property="Background" Value="#A0FF0000"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#C0FF0000"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Estilo para la cabecera de la ventana -->
    <Style x:Key="WindowHeaderStyle" TargetType="Border">
        <Setter Property="Height" Value="54"/>
        <Setter Property="CornerRadius" Value="20,20,0,0"/>
        <Setter Property="Background" Value="#2979FF"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <!-- Estilo para el contenedor principal de la ventana -->
    <Style x:Key="WindowContainerStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#2979FF"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2B2D42" Offset="0.0"/>
                    <GradientStop Color="#23243B" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Template para la barra de título de la ventana -->
    <ControlTemplate x:Key="WindowTitleBarTemplate">
        <Border Background="#2979FF" CornerRadius="0,20,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top" 
                        Margin="0,10,10,0" 
                        Panel.ZIndex="100">
                <Button Content="—" 
                        Click="btnMinimize_Click"
                        Style="{StaticResource WindowButtonStyle}"/>
                <Button Content="☐" 
                        Click="btnMaximize_Click"
                        Style="{StaticResource WindowButtonStyle}"/>
                <Button Content="✕" 
                        Click="btnClose_Click"
                        Style="{StaticResource WindowCloseButtonStyle}"/>
            </StackPanel>
        </Border>
    </ControlTemplate>

    <!-- Template para la cabecera de la ventana -->
    <ControlTemplate x:Key="WindowHeaderTemplate">
        <Border Style="{StaticResource WindowHeaderStyle}">
            <DockPanel LastChildFill="True">
                <TextBlock Text="🗂️" 
                          FontSize="22" 
                          Margin="16,0,8,0" 
                          VerticalAlignment="Center"/>
                <TextBlock Text="{TemplateBinding Tag}" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
            </DockPanel>
        </Border>
    </ControlTemplate>

</ResourceDictionary> 