<Window x:Class="TFG_V0._01.Ventanas.Casos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFG_V0._01.Ventanas"
        xmlns:conv="clr-namespace:TFG_V0._01.Converters"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:TFG_V0._01.Controladores"
        mc:Ignorable="d"
        Title="Casos" Height="850" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Estilo para el botón de cambio de tema -->
        <Style x:Key="ThemeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <Image x:Name="ThemeIcon" Source="/TFG V0.01;component/Recursos/Iconos/sol.png" Width="20" Height="20"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Botones redondeados -->
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                        CornerRadius="20" BorderThickness="{TemplateBinding BorderThickness}" 
                        BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="aqua" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" Value="#DDDDDD" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Estilo de tarjeta -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush x:Name="colortarjeta" Color="#454545" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#333" />
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ModernComboBoxStyle de Clientes.xaml -->
        <Style x:Key="ModernComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                <ToggleButton
                                    Name="MainToggle"
                                    Grid.Column="0"
                                    Focusable="False"
                                    IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                    Background="Transparent"
                                    BorderThickness="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="30"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter
                                            Grid.Column="0"
                                            Content="{TemplateBinding SelectedItem}"
                                            ContentTemplate="{TemplateBinding ItemTemplate}"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Stretch"/>
                                        <Path
                                            Grid.Column="1"
                                            Data="M0,0 L4,4 L8,0"
                                            Stroke="White"
                                            StrokeThickness="2"
                                            Width="20"
                                            Height="20"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"/>
                                    </Grid>
                                </ToggleButton>
                            </Border>
                            <Popup 
                                IsOpen="{TemplateBinding IsDropDownOpen}" 
                                Placement="Bottom"
                                AllowsTransparency="True" 
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                      MinWidth="{Binding Path=ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <Border Background="#90454545" 
                                            BorderBrush="#40FFFFFF"
                                            BorderThickness="1" 
                                            CornerRadius="10" 
                                            Margin="0,5,0,0">
                                        <ScrollViewer SnapsToDevicePixels="True">
                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para el ToggleButton del ComboBox -->
        <Style x:Key="ComboBoxToggleButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border Background="Transparent" Width="30">
                            <Path Data="M0,0 L4,4 L8,0" Stroke="White" StrokeThickness="2"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <conv:EstadoToColorConverter x:Key="EstadoToColorConverter" />
        <conv:EventoColorDotConverter x:Key="EventoColorDotConverter" />
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <conv:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <Style x:Key="ComboBoxWithClearStyle" TargetType="ComboBox" BasedOn="{StaticResource ModernComboBoxStyle}">
            <Setter Property="Width" Value="400"/>
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="StaysOpenOnEdit" Value="True"/>
            <Setter Property="IsTextSearchEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="35"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="PART_EditableTextBox"
                                            Grid.Column="0"
                                            Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                            Background="Transparent"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="10,0,0,0"
                                            VerticalAlignment="Center"/>
                                    <!-- Botón X -->
                                    <Button x:Name="ClearButton"
                                            Grid.Column="1"
                                            Content="✖"
                                            Width="25" Height="25"
                                            Margin="5,0,0,0"
                                            Foreground="Red"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Visibility="{Binding SelectedItem, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource NullToVisibilityConverter}}"
                                            Click="ClearComboBox_Click"/>
                                    <!-- Flecha desplegable -->
                                    <ToggleButton
                                        Name="MainToggle"
                                        Grid.Column="2"
                                        Focusable="False"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        Background="Transparent"
                                        BorderThickness="0">
                                        <Path
                                            Data="M0,0 L4,4 L8,0"
                                            Stroke="White"
                                            StrokeThickness="2"
                                            Width="20"
                                            Height="20"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                Placement="Bottom"
                                AllowsTransparency="True"
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                      MinWidth="{Binding Path=ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <Border Background="#90454545"
                                            BorderBrush="#40FFFFFF"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Margin="0,5,0,0">
                                        <ScrollViewer SnapsToDevicePixels="True">
                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="AUTO" />
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Fondo -->
        <Grid.Background>
            <ImageBrush x:Name="backgroundFondo" ImageSource="/TFG V0.01;component/Recursos/Background/oscuro/main.png"/>
        </Grid.Background>
        <!--Navbar-->
        <controls:NavbarControl x:Name="navbar" Grid.Column="0" />
        <!-- Botón de tema claro/oscuro -->
        <Button x:Name="ThemeButton" Width="35" Height="35" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="ThemeButton_Click" Style="{StaticResource ThemeButtonStyle}" Grid.Column="2"/>

        <!-- Contenido principal -->
        <Grid Grid.Column="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Gestión del Caso" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <!-- Buscador -->
                <Grid x:Name="Buscador" Visibility="Visible">
                    <Border Style="{StaticResource CardStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="30" Width="500" CornerRadius="12">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="20">
                            <TextBlock Text="Buscar Caso" FontSize="22" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Paso 1: Seleccione un cliente" Foreground="#CCCCCC" FontSize="14" Margin="0,5,0,0"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <ComboBox x:Name="comboClientes"
                                          Style="{StaticResource ComboBoxWithClearStyle}"
                                          IsEditable="True"
                                          StaysOpenOnEdit="True"
                                          IsTextSearchEnabled="False"
                                          Loaded="ComboClientes_Loaded"
                                          KeyUp="ComboClientes_KeyUp"
                                          SelectionChanged="ComboClientes_SelectionChanged"
                                          ItemsSource="{Binding Clientes}"
                                          SelectedItem="{Binding ClienteSeleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5">
                                                <TextBlock Text="{Binding nombre_cliente}" Foreground="White" FontSize="16"/>
                                                <TextBlock Text="{Binding email1}" Foreground="#CCFFFFFF" FontSize="12"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                            <TextBlock Text="Paso 2: Seleccione un caso del cliente" Foreground="#CCCCCC" FontSize="14" Margin="0,5,0,0"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <ComboBox x:Name="comboCasosFiltrados"
                                          Style="{StaticResource ComboBoxWithClearStyle}"
                                          IsEditable="True"
                                          StaysOpenOnEdit="True"
                                          IsTextSearchEnabled="False"
                                          Loaded="ComboCasosFiltrados_Loaded"
                                          KeyUp="ComboCasosFiltrados_KeyUp"
                                          SelectionChanged="ComboCasosFiltrados_SelectionChanged"
                                          ItemsSource="{Binding CasosFiltrados}"
                                          SelectedItem="{Binding SelectedCasoFiltrado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5">
                                                <Ellipse Width="16" Height="16" Margin="0,0,8,0">
                                                    <Ellipse.Fill>
                                                        <Binding Path="Estado.nombre" Converter="{StaticResource EstadoToColorConverter}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock Text="{Binding titulo}" Foreground="White" FontWeight="Bold" FontSize="15"/>
                                                <TextBlock Text="{Binding descripcion}" Foreground="#FFD6D6D6" FontSize="13" Margin="8,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,20,0,20" HorizontalAlignment="Center">
                                <Separator Margin="10,0" Width="100"/>
                                <TextBlock Text="O" FontSize="14" Margin="10,0" VerticalAlignment="Center" Foreground="White"/>
                                <Separator Margin="10,0" Width="100"/>
                            </StackPanel>

                            <!-- BÚSQUEDA DIRECTA -->
                            <TextBlock Text="Buscar directamente un caso" Foreground="#CCCCCC" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <ComboBox x:Name="comboTodosLosCasos"
                                          Style="{StaticResource ComboBoxWithClearStyle}"
                                          IsEditable="True"
                                          StaysOpenOnEdit="True"
                                          IsTextSearchEnabled="False"
                                          Loaded="ComboTodosLosCasos_Loaded"
                                          KeyUp="ComboTodosLosCasos_KeyUp"
                                          SelectionChanged="ComboTodosLosCasos_SelectionChanged"
                                          ItemsSource="{Binding TodosLosCasos}"
                                          SelectedItem="{Binding SelectedCasoDirecto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Text="{Binding TextoComboTodosLosCasos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5">
                                                <TextBlock Text="{Binding referencia}" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding titulo}" Foreground="White" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding descripcion}" Foreground="#CCFFFFFF"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <!-- Botón -->
                            <Button x:Name="btnBuscar1" Content="Buscar" Style="{StaticResource RoundedButtonStyle}" Width="400" Margin="0,25,5,0" Background="#30FFFFFF" Click="BtnBuscar1_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Contenido Casos -->
                <Grid x:Name="ContenidoCasos" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Columna izquierda -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.33*"/>
                            <RowDefinition Height="0.33*"/>
                            <RowDefinition Height="0.33*"/>
                        </Grid.RowDefinitions>

                        <!-- Apartado 1: Eventos y citas -->
                        <Border Style="{StaticResource CardStyle}" Grid.Row="0" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Calendario -->
                                <Calendar x:Name="calendar"
                                         Grid.Column="0" 
                                         Margin="0,0,10,0" 
                                         VerticalAlignment="Center" 
                                         HorizontalAlignment="Center"
                                         SelectedDatesChanged="Calendar_SelectedDatesChanged">
                                    <Calendar.Resources>
                                        <Style TargetType="CalendarDayButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="CalendarDayButton">
                                                        <Grid>
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            <Ellipse x:Name="EventDot" Width="8" Height="8" VerticalAlignment="Bottom" Margin="0,0,0,4">
                                                                <Ellipse.Fill>
                                                                    <MultiBinding Converter="{StaticResource EventoColorDotConverter}">
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                        <Binding Path="Date" RelativeSource="{RelativeSource Self}"/>
                                                                    </MultiBinding>
                                                                </Ellipse.Fill>
                                                            </Ellipse>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Calendar.Resources>
                                </Calendar>

                                <!-- Sección de eventos -->
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Título -->
                                    <TextBlock x:Name="TituloEventos" Text="Eventos del día" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" Grid.Row="0"/>

                                    <!-- Lista de eventos -->
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <ListView x:Name="EventosList"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Margin="0,0,0,0"
                                                  HorizontalContentAlignment="Stretch">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#50FFFFFF"
                                                            CornerRadius="16"
                                                            Padding="18"
                                                            Margin="0,8"
                                                            Effect="{StaticResource DropShadowEffect}"
                                                            HorizontalAlignment="Stretch">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <!-- Círculo de estado -->
                                                            <Ellipse Width="18" Height="18" Margin="0,0,12,0" Grid.Column="0">
                                                                <Ellipse.Fill>
                                                                    <SolidColorBrush Color="{Binding EstadoColor}"/>
                                                                </Ellipse.Fill>
                                                            </Ellipse>
                                                            <!-- Info del evento -->
                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="{Binding titulo}" 
                                                                           Foreground="White" 
                                                                           FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding descripcion}" 
                                                                           Foreground="#CCFFFFFF" 
                                                                           FontSize="12"/>
                                                                <TextBlock Text="{Binding estado_nombre}" 
                                                                           Foreground="#CCFFFFFF" 
                                                                           FontSize="12"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </ScrollViewer>

                                    <!-- Botones -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                        <Button Content="➕ Añadir" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="AñadirEvento_Click"/>
                                        <Button Content="✏️ Modificar" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="ModificarEvento_Click"/>
                                        <Button Content="🗑 Eliminar" Style="{StaticResource RoundedButtonStyle}" Click="EliminarEvento_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Apartado 2: Notas -->
                        <Border Style="{StaticResource CardStyle}" Grid.Row="1" Margin="0,0,0,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Notas" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                                <!-- Lista de notas -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ListView x:Name="NotasList" 
                                           Background="Transparent" 
                                           BorderThickness="0" 
                                           Foreground="White"
                                           HorizontalContentAlignment="Stretch"
                                           SelectionChanged="NotasList_SelectionChanged">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#50FFFFFF"
                                                        CornerRadius="16"
                                                        Padding="18"
                                                        Margin="0,8"
                                                        Effect="{StaticResource DropShadowEffect}"
                                                        HorizontalAlignment="Stretch">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <!-- Info de la nota -->
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Nombre}" Foreground="White" FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding Descripcion}" Foreground="#CCFFFFFF" FontSize="12"/>
                                                            <TextBlock Text="{Binding FechaCreacion, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Foreground="#CCFFFFFF" FontSize="12"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </ScrollViewer>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                    <Button x:Name="btnAgregarNota" Content="➕ Añadir" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="AgregarNota_Click"/>
                                    <Button x:Name="btnModificarNota" Content="✏️ Modificar" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="ModificarNota_Click"/>
                                    <Button x:Name="btnEliminarNota" Content="🗑 Eliminar" Style="{StaticResource RoundedButtonStyle}" Click="EliminarNota_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Apartado 3: Documentos -->
                        <Border Style="{StaticResource CardStyle}" Grid.Row="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Documentos del Caso" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ListView x:Name="DocumentosList" 
                                           Background="Transparent" 
                                           BorderThickness="0" 
                                           Foreground="White"
                                           HorizontalContentAlignment="Stretch"
                                           SelectionChanged="DocumentosList_SelectionChanged">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#50FFFFFF"
                                                        CornerRadius="16"
                                                        Padding="18"
                                                        Margin="0,8"
                                                        Effect="{StaticResource DropShadowEffect}"
                                                        HorizontalAlignment="Stretch">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <!-- Info del documento -->
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding nombre}" 
                                                                       Foreground="White" 
                                                                       FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding descripcion}" 
                                                                       Foreground="#CCFFFFFF" 
                                                                       FontSize="12"/>
                                                            <TextBlock Text="{Binding tipo_documento}" 
                                                                       Foreground="#CCFFFFFF" 
                                                                       FontSize="12"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </ScrollViewer>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                    <Button x:Name="btnAgregarDocumento" Content="➕ Añadir" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="AgregarDocumento_Click"/>
                                    <Button x:Name="btnModificarDocumento" Content="✏️ Modificar" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="ModificarDocumento_Click"/>
                                    <Button x:Name="btnEliminarDocumento" Content="🗑 Eliminar" Style="{StaticResource RoundedButtonStyle}" Click="EliminarDocumento_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Columna derecha: Tareas -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="1" VerticalAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Tareas Pendientes" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ListView x:Name="TareasList" 
                                       Background="Transparent" 
                                       BorderThickness="0" 
                                       Foreground="White"
                                       HorizontalContentAlignment="Stretch"
                                       SelectionChanged="TareasList_SelectionChanged">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#50FFFFFF"
                                                    CornerRadius="16"
                                                    Padding="18"
                                                    Margin="0,8"
                                                    Effect="{StaticResource DropShadowEffect}"
                                                    HorizontalAlignment="Stretch">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <!-- Checkbox de tarea -->
                                                    <CheckBox Grid.Column="0" 
                                                            IsChecked="{Binding completada}"
                                                            Click="TareaCheckBox_Click"
                                                            Margin="0,0,12,0"/>
                                                    <!-- Info de la tarea -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding titulo}" 
                                                                   Foreground="White" 
                                                                   FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding descripcion}" 
                                                                   Foreground="#CCFFFFFF" 
                                                                   FontSize="12"/>
                                                        <TextBlock Text="{Binding fecha_vencimiento, StringFormat='Vence: {0:dd/MM/yyyy}'}" 
                                                                   Foreground="#CCFFFFFF" 
                                                                   FontSize="12"/>
                                                        <TextBlock Text="{Binding prioridad}" 
                                                                   Foreground="#CCFFFFFF" 
                                                                   FontSize="12"/>
                                                        <TextBlock Text="{Binding TiempoRestante}" Foreground="Orange" FontSize="12"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </ScrollViewer>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button x:Name="btnAgregarTarea" Content="➕ Añadir" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="AgregarTarea_Click"/>
                                <Button x:Name="btnModificarTarea" Content="✏️ Modificar" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="ModificarTarea_Click"/>
                                <Button x:Name="btnEliminarTarea" Content="🗑 Eliminar" Style="{StaticResource RoundedButtonStyle}" Click="EliminarTarea_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
