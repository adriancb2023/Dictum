                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <!-- Botón -->
                            <Button x:Name="btnBuscar1" Content="Buscar" Style="{StaticResource RoundedButtonStyle}" Width="400" Margin="0,20,5,0" Click="BtnBuscar1_Click"/>
                        </StackPanel>

                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Direction="-90" 
                    RenderingBias="Quality" ShadowDepth="2" 
                    Color="#20000000"/>
                        </Border.Effect>
                    </Border>
                </Grid>

                <!-- Contenido Casos -->
                <Grid x:Name="ContenidoCasos" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Columna izquierda -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.33*"/>
                            <RowDefinition Height="0.33*"/>
                            <RowDefinition Height="0.33*"/>
                        </Grid.RowDefinitions>

                        <!-- Apartado 1: Eventos y citas -->
                        <Border Style="{StaticResource CardStyle}" Grid.Row="0" Margin="0,0,0,10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Direction="-90" 
RenderingBias="Quality" ShadowDepth="2" 
Color="#20000000"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Calendario -->
                                <Calendar x:Name="calendar"
                                         Grid.Column="0" 
                                         Margin="0,0,10,0" 
                                         VerticalAlignment="Center" 
                                         HorizontalAlignment="Center"
                                         SelectedDatesChanged="Calendar_SelectedDatesChanged">
                                    <Calendar.Resources>
                                        <Style TargetType="CalendarDayButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="CalendarDayButton">
                                                        <Grid>
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            <Ellipse x:Name="EventDot" Width="8" Height="8" VerticalAlignment="Bottom" Margin="0,0,0,4">
                                                                <Ellipse.Fill>
                                                                    <MultiBinding Converter="{StaticResource EventoColorDotConverter}">
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                        <Binding Path="Date" RelativeSource="{RelativeSource Self}"/>
                                                                    </MultiBinding>
                                                                </Ellipse.Fill>
                                                            </Ellipse>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Calendar.Resources>
                                </Calendar>

                                <!-- Sección de eventos -->
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Título -->
                                    <TextBlock x:Name="TituloEventos" Text="Eventos del día" FontSize="24" FontWeight="Bold" Style="{StaticResource PrimaryTextStyle}" Margin="0,0,0,10" Grid.Row="0"/>

                                    <!-- Lista de eventos -->
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <ListView x:Name="EventosList"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Margin="0,0,0,0"
                                                  HorizontalContentAlignment="Stretch">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#50FFFFFF"
                                                            CornerRadius="16"
                                                            Padding="18"
                                                            Margin="0,8"
                                                            Effect="{StaticResource DropShadowEffect}"
                                                            HorizontalAlignment="Stretch">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <!-- Hora del evento -->
                                                            <TextBlock Text="{Binding FechaInicio, StringFormat={}{0:hh\\:mm}}"
                                                                       Foreground="Orange"
                                                                       FontWeight="Bold"
                                                                       FontSize="18"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,12,0"
                                                                       Grid.Column="0"/>
                                                            <!-- Círculo de estado -->
                                                            <Ellipse Width="18" Height="18" Margin="0,0,12,0" Grid.Column="1">
                                                                <Ellipse.Fill>
                                                                    <SolidColorBrush Color="{Binding EstadoColor}"/>
                                                                </Ellipse.Fill>
                                                            </Ellipse>
                                                            <!-- Info del evento -->
                                                            <StackPanel Grid.Column="2">
                                                                <TextBlock Text="{Binding Titulo}" 
                                                                           Style="{StaticResource PrimaryTextStyle}" 
                                                                           FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding Descripcion}" 
                                                                           Style="{StaticResource SecondaryTextStyle}" 
                                                                           FontSize="12"/>
                                                                <TextBlock Text="{Binding EstadoNombre}" 
                                                                           Style="{StaticResource SecondaryTextStyle}" 
                                                                           FontSize="12"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </ScrollViewer>

                                    <!-- Botones -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                        <Button Content="🞧" Width="50" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="AñadirEvento_Click"/>
                                        <Button Content="🖉" Width="50" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="ModificarEvento_Click"/>
                                        <Button Content="🗙" Width="50" Style="{StaticResource RoundedButtonStyle}" Click="EliminarEvento_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>


                        <!-- Apartado 2: Notas -->
                        <Border Style="{StaticResource CardStyle}" Grid.Row="1" Margin="0,0,0,10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Direction="-90" 
RenderingBias="Quality" ShadowDepth="2" 
Color="#20000000"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock x:Name="txtNotas" Text="Notas" FontSize="16" FontWeight="Bold" Style="{StaticResource PrimaryTextStyle}" Margin="0,0,0,10"/>

                                <!-- Lista de notas -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ListView x:Name="NotasList" 
                                           Background="Transparent" 
                                           BorderThickness="0" 
                                           Foreground="White"
                                           HorizontalContentAlignment="Stretch"
                                           SelectionChanged="NotasList_SelectionChanged">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#50FFFFFF"
                                                        CornerRadius="16"
                                                        Padding="18"
                                                        Margin="0,8"
                                                        Effect="{StaticResource DropShadowEffect}"
                                                        HorizontalAlignment="Stretch">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <!-- Info de la nota -->
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Nombre}" Style="{StaticResource PrimaryTextStyle}" FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding Descripcion}" Style="{StaticResource SecondaryTextStyle}" FontSize="12"/>
                                                            <TextBlock Text="{Binding FechaCreacion, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Style="{StaticResource SecondaryTextStyle}" FontSize="12"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </ScrollViewer>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                    <Button x:Name="btnAgregarNota" Content="🞧" Width="50" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="AgregarNota_Click"/>
                                    <Button x:Name="btnModificarNota" Content="🖉" Width="50" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="ModificarNota_Click"/>
                                    <Button x:Name="btnEliminarNota" Content="🗙" Width="50" Style="{StaticResource RoundedButtonStyle}" Click="EliminarNota_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Apartado 3: Documentos -->
                        <Border Style="{StaticResource CardStyle}" Grid.Row="2" Margin="0,0,0,10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Direction="-90" 
RenderingBias="Quality" ShadowDepth="2" 
Color="#20000000"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock x:Name="txtDocumentosCaso" Text="Documentos del Caso" FontSize="16" FontWeight="Bold" Style="{StaticResource PrimaryTextStyle}" Margin="0,0,0,10"/>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ListView x:Name="DocumentosList" 
                                           Background="Transparent" 
                                           BorderThickness="0" 
                                           Foreground="White"
                                           HorizontalContentAlignment="Stretch"
                                           SelectionChanged="DocumentosList_SelectionChanged">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#50FFFFFF"
                                                        CornerRadius="16"
                                                        Padding="18"
                                                        Margin="0,8"
                                                        Effect="{StaticResource DropShadowEffect}"
                                                        HorizontalAlignment="Stretch">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <!-- Info del documento -->
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="{Binding nombre}" 
                                                                       Style="{StaticResource PrimaryTextStyle}"
                                                                       FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding TipoDocumento.Nombre}" 
                                                                       Style="{StaticResource SecondaryTextStyle}"
                                                                       FontSize="12"/>
                                                            <TextBlock Text="{Binding extension_archivo, StringFormat='Ext: {0}'}" 
                                                                       Style="{StaticResource SecondaryTextStyle}"
                                                                       FontSize="12"/>
                                                            <TextBlock Text="{Binding fecha_subid, StringFormat='Subido: {0:dd/MM/yyyy HH:mm}'}" 
                                                                       Style="{StaticResource SecondaryTextStyle}"
                                                                       FontSize="12"/>
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                            <Button Content="Ver" Margin="0,0,8,0" CommandParameter="{Binding}" Click="VerDocumento_Click"/>
                                                            <Button Content="Descargar" CommandParameter="{Binding}" Click="DescargarDocumento_Click"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </ScrollViewer>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                    <Button x:Name="btnAgregarDocumento" Content="🞧" Width="50" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="AgregarDocumento_Click"/>
                                    <Button x:Name="btnModificarDocumento" Content="🖉" Width="50" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="ModificarDocumento_Click"/>
                                    <Button x:Name="btnEliminarDocumento" Content="🗙" Width="50" Style="{StaticResource RoundedButtonStyle}" Click="EliminarDocumento_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Columna derecha: Tareas -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="1" Margin="10,0,0,10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Direction="-90" 
RenderingBias="Quality" ShadowDepth="2" 
Color="#20000000"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="txtTareasPendientes" Text="Tareas Pendientes" FontSize="16" FontWeight="Bold" Style="{StaticResource PrimaryTextStyle}" Margin="0,0,0,10"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ListView x:Name="TareasList" 
                                       Background="Transparent" 
                                       BorderThickness="0" 
                                       Foreground="White"
                                       HorizontalContentAlignment="Stretch"
                                       SelectionChanged="TareasList_SelectionChanged">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#50FFFFFF"
                                                    CornerRadius="16"
                                                    Padding="18"
                                                    Margin="0,8"
                                                    Effect="{StaticResource DropShadowEffect}"
                                                    HorizontalAlignment="Stretch">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <!-- Checkbox de tarea -->
                                                    <CheckBox Grid.Column="0" 
                                                            IsChecked="{Binding completada, Mode=TwoWay}"
                                                            Click="TareaCheckBox_Click"
                                                            Margin="0,0,12,0"/>
                                                    <!-- Info de la tarea -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding titulo}" 
                                                                   Style="{StaticResource PrimaryTextStyle}" 
                                                                   FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding descripcion}" 
                                                                   Style="{StaticResource SecondaryTextStyle}" 
                                                                   FontSize="12"/>
                                                        <TextBlock Text="{Binding fecha_vencimiento, StringFormat='Vence: {0:dd/MM/yyyy}'}" 
                                                                   Style="{StaticResource SecondaryTextStyle}" 
                                                                   FontSize="12"/>
                                                        <TextBlock Text="{Binding prioridad}" 
                                                                   Style="{StaticResource SecondaryTextStyle}" 
                                                                   FontSize="12"/>
                                                        <TextBlock Text="{Binding TiempoRestante}" Foreground="Orange" FontSize="12"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </ScrollViewer>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button x:Name="btnAgregarTarea" Content="🞧" Width="50" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="AgregarTarea_Click"/>
                                <Button x:Name="btnModificarTarea" Content="🖉" Width="50" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0" Click="ModificarTarea_Click"/>
                                <Button x:Name="btnEliminarTarea" Content="🗙" Width="50" Style="{StaticResource RoundedButtonStyle}" Click="EliminarTarea_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
