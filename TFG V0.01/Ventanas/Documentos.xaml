<Window x:Class="TFG_V0._01.Ventanas.Documentos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:TFG_V0._01.Converters"
        xmlns:local="clr-namespace:TFG_V0._01.Ventanas"
        xmlns:controls="clr-namespace:TFG_V0._01.Controladores"
        mc:Ignorable="d"
        Title="Documentos" Height="850" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <converters:BoolToNumberConverter x:Key="BoolToNumberConverter"/>

        <!-- Document Card Style -->
        <Style x:Key="DocumentCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#40000000"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="MinWidth" Value="250"/>
            <Setter Property="MinHeight" Value="150"/>
        </Style>

        <!-- Estilos existentes -->
        <Style x:Key="ThemeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <Image x:Name="ThemeIcon" Source="/TFG V0.01;component/Recursos/Iconos/sol.png" Width="20" Height="20"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para el botón de filtros -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Source="/TFG V0.01;component/Recursos/Iconos/documentos2.png" Width="20" Height="20"/>
                                <TextBlock Text="Filtros" Foreground="White" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#50FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para los ComboBox -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Estilo para los CheckBox -->
        <Style x:Key="FilterCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para el panel de drop -->
        <Style x:Key="DropZoneStyle" TargetType="Border">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="MinHeight" Value="100"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#50FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="AUTO" />
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Fondo -->
        <Grid.Background>
            <ImageBrush x:Name="backgroundFondo" ImageSource="/TFG V0.01;component/Recursos/Background/oscuro/main.png"/>
        </Grid.Background>

        <!-- Navbar -->
        <controls:NavbarControl x:Name="navbar" Grid.Column="0" />

        <!-- Botón de tema -->
        <Button x:Name="ThemeButton" Width="35" Height="35" Margin="0" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Click="ThemeButton_Click" Style="{StaticResource ThemeButtonStyle}" 
                Grid.Column="2"/>

        <!-- Contenido principal -->
        <Grid Grid.Column="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Filtros -->
                <RowDefinition Height="Auto"/>
                <!-- Zona Drop -->
                <RowDefinition Height="*"/>
                <!-- Documentos -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Gestión de Documentos" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Visualiza y administra tus documentos" FontSize="16" Foreground="#CCFFFFFF" Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" x:Name="btnFiltros" 
                        Style="{StaticResource FilterButtonStyle}"
                        Click="ToggleFiltros_Click"/>
            </Grid>

            <!-- Panel de Filtros -->
            <Grid Grid.Row="1" x:Name="PanelFiltros" Visibility="Collapsed" Margin="0,20">
                <Border Background="#30000000" CornerRadius="10" Padding="20">
                    <WrapPanel>
                        <!-- Filtro Cliente -->
                        <StackPanel Margin="10,5">
                            <TextBlock Text="Cliente:" Foreground="White" Margin="0,0,0,5"/>
                            <ComboBox x:Name="ComboClientes" Style="{StaticResource FilterComboBoxStyle}"
                                      ItemsSource="{Binding ListaClientes}"
                                      DisplayMemberPath="nombre_cliente"
                                      SelectionChanged="ComboClientes_SelectionChanged"/>
                        </StackPanel>

                        <!-- Filtro Caso -->
                        <StackPanel Margin="10,5">
                            <TextBlock Text="Caso:" Foreground="White" Margin="0,0,0,5"/>
                            <ComboBox x:Name="ComboCasos" Style="{StaticResource FilterComboBoxStyle}"
                                      ItemsSource="{Binding ListaCasosFiltrados}"
                                      DisplayMemberPath="titulo"
                                      SelectionChanged="ComboCasos_SelectionChanged"/>
                        </StackPanel>

                        <!-- Filtro Fecha -->
                        <StackPanel Margin="10,5">
                            <TextBlock Text="Fecha:" Foreground="White" Margin="0,0,0,5"/>
                            <DatePicker x:Name="FiltroFecha" Width="200" Height="35"
                                        SelectedDateChanged="FiltroFecha_SelectedDateChanged"/>
                        </StackPanel>

                        <!-- Filtros de Tipo -->
                        <StackPanel Margin="10,5">
                            <TextBlock Text="Tipo de Documento:" Foreground="White" Margin="0,0,0,5"/>
                            <WrapPanel>
                                <CheckBox Content="PDF" Tag="PDF" IsChecked="False" Style="{StaticResource FilterCheckBoxStyle}" Checked="TipoDocumento_Changed" Unchecked="TipoDocumento_Changed"/>
                                <CheckBox Content="Audio" Tag="AUD" IsChecked="False" Style="{StaticResource FilterCheckBoxStyle}" Checked="TipoDocumento_Changed" Unchecked="TipoDocumento_Changed"/>
                                <CheckBox Content="Imagen" Tag="IMG" IsChecked="False" Style="{StaticResource FilterCheckBoxStyle}" Checked="TipoDocumento_Changed" Unchecked="TipoDocumento_Changed"/>
                                <CheckBox Content="Video" Tag="VID" IsChecked="False" Style="{StaticResource FilterCheckBoxStyle}" Checked="TipoDocumento_Changed" Unchecked="TipoDocumento_Changed"/>
                                <CheckBox Content="Otros" Tag="OTR" IsChecked="False" Style="{StaticResource FilterCheckBoxStyle}" Checked="TipoDocumento_Changed" Unchecked="TipoDocumento_Changed"/>
                            </WrapPanel>
                        </StackPanel>

                        <!-- Filtros Adicionales -->
                        <Expander Header="Más Filtros" Foreground="White" Margin="10,5">
                            <WrapPanel>
                                <StackPanel Margin="5">
                                    <TextBlock Text="Tamaño:" Foreground="White"/>
                                    <ComboBox Style="{StaticResource FilterComboBoxStyle}">
                                        <ComboBoxItem Content="Cualquier tamaño"/>
                                        <ComboBoxItem Content="Menos de 1MB"/>
                                        <ComboBoxItem Content="1MB - 10MB"/>
                                        <ComboBoxItem Content="Más de 10MB"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Margin="5">
                                    <TextBlock Text="Ordenar por:" Foreground="White"/>
                                    <ComboBox Style="{StaticResource FilterComboBoxStyle}">
                                        <ComboBoxItem Content="Nombre (A-Z)"/>
                                        <ComboBoxItem Content="Nombre (Z-A)"/>
                                        <ComboBoxItem Content="Más recientes"/>
                                        <ComboBoxItem Content="Más antiguos"/>
                                    </ComboBox>
                                </StackPanel>
                            </WrapPanel>
                        </Expander>
                    </WrapPanel>
                </Border>
            </Grid>

            <!-- Zona de Drop -->
            <Border Grid.Row="2" Style="{StaticResource DropZoneStyle}"
                    AllowDrop="True" Drop="DropZone_Drop" DragOver="DropZone_DragOver">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/TFG V0.01;component/Recursos/Iconos/upload.png" Width="32" Height="32" Margin="0,0,0,10"/>
                    <TextBlock Text="Arrastra archivos aquí o haz clic para seleccionar" 
                               Foreground="White" TextAlignment="Center"/>
                    <Button Content="Seleccionar Archivos" 
                            Style="{StaticResource RoundedButtonStyle}"
                            Click="SelectFiles_Click"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Paneles de Documentos -->
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="DocumentPanels" ItemsSource="{Binding DocumentPanelsCollection}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource DocumentCardStyle}"
                                    Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Grid.ColumnSpan="{Binding IsOddPanel, Converter={StaticResource BoolToNumberConverter}}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="16" FontWeight="Bold" 
                                               Foreground="White" 
                                               Margin="10"/>
                                    <ListBox ItemsSource="{Binding Files}" 
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="White">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding Name}" 
                                                               Grid.Column="0"
                                                               VerticalAlignment="Center"/>
                                                    <Button Grid.Column="1"
                                                            Margin="5,0"
                                                            Click="OpenFile_Click"
                                                            ToolTip="Abrir">
                                                        <Image Source="/TFG V0.01;component/Recursos/Iconos/open.png" 
                                                               Width="16" Height="16"/>
                                                    </Button>
                                                    <Button Grid.Column="2"
                                                            Click="DeleteFile_Click"
                                                            ToolTip="Eliminar">
                                                        <Image Source="/TFG V0.01;component/Recursos/Iconos/delete.png" 
                                                               Width="16" Height="16"/>
                                                    </Button>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>