<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="TFG_V0._01.Ventanas.SubVentanas.AñadirCasoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFG_V0._01.Ventanas.SubVentanas"
        mc:Ignorable="d"
        d:DesignHeight="700" d:DesignWidth="400">

    <UserControl.Resources>
        <!-- Estilo para TextBox redondeado -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                    <Setter Property="Foreground" Value="#222222"/>
                    <Setter Property="Background" Value="#30FFFFFF"/>
                    <Setter Property="BorderBrush" Value="#40000000"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para DatePicker redondeado -->
        <Style x:Key="RoundedDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                    <Setter Property="Foreground" Value="#222222"/>
                    <Setter Property="Background" Value="#30FFFFFF"/>
                    <Setter Property="BorderBrush" Value="#40000000"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botones redondeados -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                    <Setter Property="Foreground" Value="#222222"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="#30FFFFFF"/>
                    <Setter Property="BorderBrush" Value="#40000000"/>
                </DataTrigger>
            </Style.Triggers>
            
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Margin="20,20,20,20">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="24"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                            <Setter Property="Foreground" Value="#222222"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
            <TextBlock.Text>Añadir Nuevo Caso</TextBlock.Text>
        </TextBlock>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto" 
                     Margin="20,0,20,0">
            <StackPanel>
                <!-- Título -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Título:</TextBlock.Text>
                </TextBlock>
                <TextBox x:Name="txtTitulo" 
                         Style="{StaticResource RoundedTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Descripción -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Descripción:</TextBlock.Text>
                </TextBlock>
                <TextBox x:Name="txtDescripcion" 
                         Style="{StaticResource RoundedTextBoxStyle}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="100"
                         Margin="0,0,0,15"/>

                <!-- Cliente -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Cliente:</TextBlock.Text>
                </TextBlock>
                <ComboBox x:Name="cmbClientes" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          DisplayMemberPath="nombre"
                          SelectedValuePath="id"
                          Margin="0,0,0,15" Height="30"/>

                <!-- Tipo de Caso -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Tipo de Caso:</TextBlock.Text>
                </TextBlock>
                <ComboBox x:Name="cmbTiposCaso" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          DisplayMemberPath="nombre"
                          SelectedValuePath="id"
                          Margin="0,0,0,15" Height="30"/>

                <!-- Estado -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Estado:</TextBlock.Text>
                </TextBlock>
                <ComboBox x:Name="cmbEstados" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          DisplayMemberPath="nombre"
                          SelectedValuePath="id"
                          Margin="0,0,0,15" Height="30"/>

                <!-- Fecha de Inicio -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Fecha de Inicio:</TextBlock.Text>
                </TextBlock>
                <DatePicker x:Name="dpFechaInicio" 
                           Style="{StaticResource RoundedDatePickerStyle}"
                           Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="20,20,20,20">
            <Button Content="Cancelar" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#30FFFFFF"
                    Margin="0,0,10,0"
                    Click="btnCancelar_Click"/>
            <Button Content="Guardar" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#2979FF"
                    Click="btnGuardar_Click"/>
        </StackPanel>
    </Grid>
</UserControl> 