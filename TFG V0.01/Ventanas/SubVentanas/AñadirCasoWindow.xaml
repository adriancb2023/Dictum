<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="TFG_V0._01.Ventanas.SubVentanas.AñadirCasoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFG_V0._01.Ventanas.SubVentanas"
        mc:Ignorable="d"
        Title="Añadir Caso" Height="700" Width="800"
        Style="{StaticResource CustomWindowStyle}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                <ToggleButton
                                    Name="MainToggle"
                                    Grid.Column="0"
                                    Focusable="False"
                                    IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                    Background="Transparent"
                                    BorderThickness="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="30"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter
                                            Grid.Column="0"
                                            Content="{TemplateBinding SelectedItem}"
                                            ContentTemplate="{TemplateBinding ItemTemplate}"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Stretch"/>
                                        <Path
                                            Grid.Column="1"
                                            Data="M0,0 L4,4 L8,0"
                                            Stroke="White"
                                            StrokeThickness="2"
                                            Width="20"
                                            Height="20"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"/>
                                    </Grid>
                                </ToggleButton>
                            </Border>
                            <Popup 
                                IsOpen="{TemplateBinding IsDropDownOpen}" 
                                Placement="Bottom"
                                AllowsTransparency="True" 
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                      MinWidth="{Binding Path=ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <Border Background="#90454545" 
                                            BorderBrush="#40FFFFFF"
                                            BorderThickness="1" 
                                            CornerRadius="10" 
                                            Margin="0,5,0,0">
                                        <ScrollViewer SnapsToDevicePixels="True">
                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Añadir Nuevo Caso" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   Margin="0,0,0,20"/>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Referencia -->
                <!--
                <TextBlock Text="Referencia:" 
                           Foreground="White" 
                           Margin="0,10,0,5"/>
                <TextBox x:Name="txtReferencia" 
                         Style="{StaticResource RoundedTextBoxStyle}"
                         Margin="0,0,0,15"/>
                -->

                <!-- Título -->
                <TextBlock Text="Título:" 
                           Foreground="White" 
                           Margin="0,10,0,5"/>
                <TextBox x:Name="txtTitulo" 
                         Style="{StaticResource RoundedTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Descripción -->
                <TextBlock Text="Descripción:" 
                           Foreground="White" 
                           Margin="0,10,0,5"/>
                <TextBox x:Name="txtDescripcion" 
                         Style="{StaticResource RoundedTextBoxStyle}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="100"
                         Margin="0,0,0,15"/>

                <!-- Cliente -->
                <TextBlock Text="Cliente:" 
                           Foreground="White" 
                           Margin="0,10,0,5"/>
                <ComboBox x:Name="cmbClientes" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          DisplayMemberPath="nombre"
                          SelectedValuePath="id"
                          Margin="0,0,0,15" Height="30"/>

                <!-- Tipo de Caso -->
                <TextBlock Text="Tipo de Caso:" 
                           Foreground="White" 
                           Margin="0,10,0,5"/>
                <ComboBox x:Name="cmbTiposCaso" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          DisplayMemberPath="nombre"
                          SelectedValuePath="id"
                          Margin="0,0,0,15" Height="30"/>

                <!-- Estado -->
                <TextBlock Text="Estado:" 
                           Foreground="White" 
                           Margin="0,10,0,5"/>
                <ComboBox x:Name="cmbEstados" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          DisplayMemberPath="nombre"
                          SelectedValuePath="id"
                          Margin="0,0,0,15" Height="30"/>

                <!-- Fecha de Inicio -->
                <TextBlock Text="Fecha de Inicio:" 
                           Foreground="White" 
                           Margin="0,10,0,5"/>
                <DatePicker x:Name="dpFechaInicio" 
                           Style="{StaticResource RoundedDatePickerStyle}"
                           Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancelar" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#30FFFFFF"
                    Margin="0,0,10,0"
                    Click="btnCancelar_Click"/>
            <Button Content="Guardar" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#2979FF"
                    Click="btnGuardar_Click"/>
        </StackPanel>
    </Grid>
</Window> 