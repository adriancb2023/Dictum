<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="TFG_V0._01.Ventanas.SubVentanas.AñadirClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFG_V0._01.Ventanas.SubVentanas"
        mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        
        <TextBlock Margin="0,10,0,5" FontSize="24" FontWeight="Bold" >
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                            <Setter Property="Foreground" Value="#222222"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
            <TextBlock.Text>Añadir Nuevo Cliente</TextBlock.Text>
        </TextBlock>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Nombre -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Nombre:</TextBlock.Text>
                </TextBlock>

                <TextBox x:Name="txtNombre" 
                         Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Apellido 1 -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Primer Apellido:</TextBlock.Text>
                </TextBlock>

                <TextBox x:Name="txtApellido1" 
                         Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Apellido 2 -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Segundo Apellido:</TextBlock.Text>
                </TextBlock>

                <TextBox x:Name="txtApellido2" 
                         Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- DNI -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>DNI:</TextBlock.Text>
                </TextBlock>

                <TextBox x:Name="txtDNI" 
                         Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Teléfono -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Teléfono:</TextBlock.Text>
                </TextBlock>

                <TextBox x:Name="txtTelefono" 
                         Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Segundo Teléfono (Opcional) -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Segundo Teléfono (Opcional):</TextBlock.Text>
                </TextBlock>

                <TextBox x:Name="txtTelefono2" 
                         Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Email -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Email:</TextBlock.Text>
                </TextBlock>

                <TextBox x:Name="txtEmail" 
                         Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Segundo Email (Opcional) -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Segundo Email (Opcional):</TextBlock.Text>
                </TextBlock>

                <TextBox x:Name="txtEmail2" 
                         Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Dirección -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Dirección:</TextBlock.Text>
                </TextBlock>

                <TextBox x:Name="txtDireccion" 
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="60"
                         Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Fecha de Contrato -->
                <TextBlock Margin="0,10,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}" Value="False">
                                    <Setter Property="Foreground" Value="#222222"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>Fecha de Contrato:</TextBlock.Text>
                </TextBlock>

                <DatePicker x:Name="dpFechaContrato" Style="{StaticResource RoundedDatePickerStyle}" Margin="0,0,0,15"/>
                
            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancelar" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#30FFFFFF"
                    Margin="0,0,10,0"
                    Click="btnCancelar_Click" Width="95"/>
            <Button Content="Guardar" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#2979FF"
                    Click="btnGuardar_Click" Width="95"/>
        </StackPanel>
    </Grid>
</UserControl> 