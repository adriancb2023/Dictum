<Window x:Class="TFG_V0._01.Ventanas.EditarCasoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:TFG_V0._01.Converters"
        Title="Editar Caso"
        Height="650" Width="700" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <conv:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
        <conv:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="18" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="aqua" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" Value="#DDDDDD" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush x:Name="colortarjeta" Color="#454545" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#333" />
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Estilos compactos locales para sobrescribir Material Design -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="26"/>
        </Style>
    </Window.Resources>
    <Border Background="#454545" CornerRadius="20" BorderThickness="1" BorderBrush="#666666" MouseLeftButtonDown="Border_MouseLeftButtonDown" Margin="30">
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="590">
            <StackPanel Margin="10,10,10,10">
                <TextBlock Text="Editar Caso" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="Fecha de inicio" FontWeight="SemiBold" Foreground="White" FontSize="12" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding FechaInicio, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" Background="#222" Foreground="White" Height="26" FontSize="12" HorizontalAlignment="Stretch" Width="Auto"/>
                    <TextBlock Text="Título" FontWeight="SemiBold" Foreground="White" FontSize="12" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Titulo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" Background="#30FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#40FFFFFF" Height="26" FontSize="12" HorizontalAlignment="Stretch" Width="Auto"/>
                    <TextBlock Text="Descripción" FontWeight="SemiBold" Foreground="White" FontSize="12" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Descripcion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" Height="50" FontSize="12" Background="#30FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#40FFFFFF" HorizontalAlignment="Stretch" Width="Auto"/>
                    <TextBlock Text="Estado" FontWeight="SemiBold" Foreground="White" FontSize="12" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding EstadosDisponibles, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding EstadoSeleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          DisplayMemberPath="nombre"
                          SelectedValuePath="id"
                          Margin="0,0,0,0" Background="#222" Foreground="White" FontSize="12" Height="26" HorizontalAlignment="Stretch" Width="Auto"/>
                </StackPanel>
                <TextBlock Text="{Binding MensajeError}" Foreground="Red" FontSize="10" Margin="0,0,0,6" Visibility="{Binding MensajeError, Converter={StaticResource StringToVisibilityConverter}}"/>
                <TextBlock Text="Documentos del caso" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4"/>
                <Border Background="#303030" CornerRadius="8" Margin="0,0,0,8">
                    <ScrollViewer VerticalScrollBarVisibility="Visible" Height="80">
                        <ItemsControl ItemsSource="{Binding DocumentosCaso}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#444" CornerRadius="6" Margin="4" BorderBrush="#666" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding nombre}" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center" Foreground="White" FontSize="11"/>
                                            <TextBlock Text="{Binding fecha_subid, StringFormat='Subido: {0:dd/MM/yyyy}'}" Foreground="#BBB" Grid.Column="1" VerticalAlignment="Center" FontSize="10"/>
                                            <Button Content="Ver" Command="{Binding DataContext.VerDocumentoCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="4,0,0,0" Width="40" Grid.Column="2" Style="{StaticResource RoundedButtonStyle}" FontSize="11"/>
                                            <Button Content="Descargar" Command="{Binding DataContext.DescargarDocumentoCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="4,0,0,0" Width="60" Grid.Column="3" Style="{StaticResource RoundedButtonStyle}" FontSize="11"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Guardar" Style="{StaticResource RoundedButtonStyle}" Click="Guardar_Click" FontSize="12" Height="28" Margin="0,0,6,0"/>
                    <Button Content="Cancelar" Style="{StaticResource RoundedButtonStyle}" Click="Cancelar_Click" FontSize="12" Height="28"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
