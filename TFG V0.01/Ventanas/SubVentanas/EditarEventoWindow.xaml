<Window x:Class="TFG_V0._01.Ventanas.SubVentanas.EditarEventoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Editar Evento" Height="650" Width="800" MinWidth="700" WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="20" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="aqua" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" Value="#DDDDDD" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="BorderBrush" Value="#666"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="Foreground" Value="#222"/>
        </Style>
    </Window.Resources>
    <Border Background="#454545" CornerRadius="20" BorderThickness="1" BorderBrush="#666666" MouseLeftButtonDown="Border_MouseLeftButtonDown" Margin="40">
        <Grid Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="54"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Cabecera y botonera UNIFICADAS -->
            <Border Grid.Row="0" Background="#2979FF" CornerRadius="20,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Icono y texto -->
                    <DockPanel Grid.Column="0" LastChildFill="True" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“…" FontSize="22" Margin="16,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Editar Evento" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </DockPanel>
                    <!-- Botonera de ventana -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                        <Button Content="â€”" Click="TFG_V0._01.Styles.WindowStyles.btnMinimize_Click" Style="{StaticResource WindowButtonStyle}"/>
                        <Button Content="â˜" Click="TFG_V0._01.Styles.WindowStyles.btnMaximize_Click" Style="{StaticResource WindowButtonStyle}"/>
                        <Button Content="âœ•" Click="TFG_V0._01.Styles.WindowStyles.btnClose_Click" Style="{StaticResource WindowCloseButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
            <StackPanel Grid.Row="1" Margin="0,0,0,18">
                <TextBlock Text="TÃ­tulo" Foreground="White" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,8"/>
                <TextBox x:Name="txtTitulo" Text="{Binding Titulo, UpdateSourceTrigger=PropertyChanged}" Background="#30FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#40FFFFFF" Padding="10,5" Height="30" FontSize="15" Margin="0,0,0,0" HorizontalAlignment="Stretch" Width="Auto"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Margin="0,0,0,18">
                <TextBlock Text="DescripciÃ³n" Foreground="White" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,8"/>
                <TextBox x:Name="txtDescripcion" Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" Background="#30FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#40FFFFFF" Padding="10,5" Height="60" FontSize="15" AcceptsReturn="True" Margin="0,0,0,0" HorizontalAlignment="Stretch" Width="Auto"/>
            </StackPanel>
            <StackPanel Grid.Row="3" Margin="0,0,0,18">
                <TextBlock Text="Hora y minutos" Foreground="White" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,8"/>
                <materialDesign:TimePicker x:Name="timePickerHoraMinuto" Margin="0,0,0,0" Height="32"/>
            </StackPanel>
            <StackPanel Grid.Row="4" Margin="0,0,0,18">
                <TextBlock Text="Estado" Foreground="White" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,8"/>
                <ComboBox x:Name="cbEstadoEvento" Margin="0,0,0,0" DisplayMemberPath="Nombre" SelectedValuePath="Id" Background="#222" Foreground="White" FontSize="15" Height="44" HorizontalAlignment="Stretch" Width="Auto"/>
            </StackPanel>
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                <Button Content="Guardar" Style="{StaticResource RoundedButtonStyle}" Click="Guardar_Click" Margin="0,0,10,0"/>
                <Button Content="Cancelar" Style="{StaticResource RoundedButtonStyle}" Click="Cancelar_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window> 