<Window x:Class="TFG_V0._01.Ventanas.SubVentanas.EditarNotaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFG_V0._01.Ventanas.SubVentanas"
        mc:Ignorable="d"
        Title="Editar Nota" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="20" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="aqua" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" Value="#DDDDDD" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#454545" CornerRadius="20" BorderThickness="1" BorderBrush="#666666" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="54"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Cabecera y botonera UNIFICADAS -->
            <Border Grid.Row="0" Background="#2979FF" CornerRadius="20,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Icono y texto -->
                    <DockPanel Grid.Column="0" LastChildFill="True" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“" FontSize="22" Margin="16,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Editar Nota" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </DockPanel>
                    <!-- Botonera de ventana -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                        <Button Content="â€”" Click="TFG_V0._01.Styles.WindowStyles.btnMinimize_Click" Style="{StaticResource WindowButtonStyle}"/>
                        <Button Content="â˜" Click="TFG_V0._01.Styles.WindowStyles.btnMaximize_Click" Style="{StaticResource WindowButtonStyle}"/>
                        <Button Content="âœ•" Click="TFG_V0._01.Styles.WindowStyles.btnClose_Click" Style="{StaticResource WindowCloseButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- TÃ­tulo de la nota -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="TÃ­tulo" 
                         Foreground="White" 
                         FontSize="14" 
                         Margin="0,0,0,5"/>
                <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                         Background="#30FFFFFF"
                         Foreground="White"
                         BorderThickness="1"
                         BorderBrush="#40FFFFFF"
                         Padding="10,5"
                         Height="31"
                         FontSize="14"/>
            </StackPanel>

            <!-- DescripciÃ³n -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <TextBlock Text="DescripciÃ³n" 
                         Foreground="White" 
                         FontSize="14" 
                         Margin="0,0,0,5"/>
                <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}"
                         Background="#30FFFFFF"
                         Foreground="White"
                         BorderThickness="1"
                         BorderBrush="#40FFFFFF"
                         Padding="10"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalAlignment="Stretch"
                         Height="180"
                         FontSize="14"/>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Grid.Row="3" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Right" 
                      Margin="0,10,0,0">
                <Button Content="Guardar" 
                        Style="{StaticResource RoundedButtonStyle}"
                        Width="100"
                        Margin="0,0,10,0"
                        Click="Guardar_Click"/>
                <Button Content="Cancelar" 
                        Style="{StaticResource RoundedButtonStyle}"
                        Width="100"
                        Click="Cancelar_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window> 