<Window x:Class="TFG_V0._01.Ventanas.SubVentanas.VentanaDocumento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFG_V0._01.Ventanas.SubVentanas"
        mc:Ignorable="d"
        Title="Documento" Height="520" Width="800" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="20" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="aqua" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" Value="#DDDDDD" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="#454545" CornerRadius="20" BorderThickness="1" BorderBrush="#666666" Margin="40">
        <Grid Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Documento" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,24"/>
            <StackPanel Grid.Row="1" Margin="0,0,0,18">
                <TextBlock Text="Nombre del documento" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox x:Name="txtNombre" Text="{Binding nombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="#30FFFFFF" Foreground="White" BorderBrush="#40FFFFFF" BorderThickness="1" Margin="0,0,0,0" Height="26" HorizontalAlignment="Stretch" Width="Auto"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Margin="0,0,0,18">
                <TextBlock Text="Tipo de documento" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ComboBox x:Name="cmbTipoDocumento" SelectedItem="{Binding tipo_documento, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="#30FFFFFF" Foreground="White" BorderBrush="#40FFFFFF" BorderThickness="1" Margin="0,0,0,0" Height="25" HorizontalAlignment="Stretch" Width="Auto">
                    <ComboBoxItem Content="Contrato"/>
                    <ComboBoxItem Content="Demanda"/>
                    <ComboBoxItem Content="Sentencia"/>
                    <ComboBoxItem Content="Otro"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Row="3" Margin="0,0,0,18">
                <TextBlock Text="Archivo" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtRutaArchivo" Text="{Binding ruta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Background="#30FFFFFF" Foreground="White" BorderBrush="#40FFFFFF" BorderThickness="1" IsReadOnly="True" Width="Auto" Margin="0,0,0,10"/>
                    <Button Grid.Column="1" Content="Examinar" Margin="5,0,0,10" Background="#30FFFFFF" Foreground="White" BorderBrush="#40FFFFFF" Click="Examinar_Click"/>
                </Grid>
            </StackPanel>
            <StackPanel Grid.Row="4" Margin="0,0,0,24">
                <TextBlock Text="DescripciÃ³n" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox x:Name="txtDescripcion" Text="{Binding descripcion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="#30FFFFFF" Foreground="White" BorderBrush="#40FFFFFF" BorderThickness="1" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="50" Margin="0,0,0,0" HorizontalAlignment="Stretch" Width="Auto"/>
            </StackPanel>
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                <Button Content="Guardar" Width="100" Style="{StaticResource RoundedButtonStyle}" Click="Guardar_Click" Margin="0,0,10,0"/>
                <Button Content="Cancelar" Width="100" Style="{StaticResource RoundedButtonStyle}" Click="Cancelar_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window> 